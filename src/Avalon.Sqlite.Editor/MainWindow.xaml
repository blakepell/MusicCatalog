<Window x:Class="Avalon.Sqlite.Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sqlite="clr-namespace:Avalon.Sqlite;assembly=Avalon.Sqlite"
        mc:Ignorable="d"
        Loaded="MainWindow_OnLoaded"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <sqlite:QueryControl x:Name="sqlite" Theme="Light">
            <sqlite:QueryControl.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="/Avalon.Sqlite;component/Resources/Light.xaml" />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </sqlite:QueryControl.Resources>
        </sqlite:QueryControl>
    </Grid>
</Window>
