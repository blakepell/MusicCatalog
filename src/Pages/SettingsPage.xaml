<Page x:Class="MusicCatalog.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MusicCatalog.Pages"
      xmlns:fluentWpf="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800" Loaded="SettingsPage_OnLoaded"
      Title="Settings Page">

    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Vertical">
            <ui:ProgressRing x:Name="ProgressRing"></ui:ProgressRing>
            <TextBlock FontFamily="Segoe UI" FontSize="16">Database Name:</TextBlock>

            <TextBox x:Name="SearchBox" x:FieldModifier="public" Text="{Binding DatabaseFilename}"
                     Margin="10,2,15,5" Padding="5" BorderThickness="1"
                     fluentWpf:Extensions.PlaceholderText="Database Filename" AcceptsReturn="false"
                     Style="{StaticResource TextBoxRevealStyle}">
            </TextBox>


        </StackPanel>

        <Button Width="150" Height="50" Content="Save" Click="ButtonBase_OnClickAsync"></Button>

        <Button Width="150" Height="50" Content="Open Folder" Click="ButtonBase_OnClick"></Button>

    </StackPanel>
</Page>
