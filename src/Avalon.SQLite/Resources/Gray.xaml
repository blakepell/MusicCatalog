<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=System.Runtime">
    <!-- Brush_AppearanceService is used by the AppearanceService to find this dictionary -->
    <SolidColorBrush x:Key="Brush_AppearanceService" Color="#FFFFFF"/>

    <!-- ModernWpf Overrides -->
    <SolidColorBrush x:Key="GridLinesBrush">#AAAAAA</SolidColorBrush>
    <SolidColorBrush x:Key="DataGridCellBackgroundBrush">Transparent</SolidColorBrush>

    <!-- Local -->
    <SolidColorBrush x:Key="Background">#1A1A1A</SolidColorBrush>
    <SolidColorBrush x:Key="Foreground">White</SolidColorBrush>
    <SolidColorBrush x:Key="ColumnHeaderBackground">#282828</SolidColorBrush>
    <SolidColorBrush x:Key="SelectionBrush">#4F81BD</SolidColorBrush>
    <SolidColorBrush x:Key="GenericIcon">#777471</SolidColorBrush>
    <SolidColorBrush x:Key="Folder">#f1d592</SolidColorBrush>
    <system:Double x:Key="FontSizeRegular">12</system:Double>
    <system:Double x:Key="FontSizeDataGridCell">13</system:Double>

</ResourceDictionary>