<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.1;net5.0-windows10.0.18362</TargetFrameworks>
    <UseWPF>true</UseWPF>
    <Version>2021.7.21.1</Version>
    <Authors>Blake Pell</Authors>
    <Company>Blake Pell</Company>
    <Description>SQLite Query Control and Extensions for WPF (.NET Core)</Description>
    <Copyright>2020-2021</Copyright>
    <PackageProjectUrl>https://github.com/blakepell/AvalonMudClient</PackageProjectUrl>
    <PackageId>Avalon.Sqlite</PackageId>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <AssemblyVersion>2021.7.21.1</AssemblyVersion>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="Editor\SqliteLight.xshd" />
    <EmbeddedResource Include="Editor\SqliteDark.xshd" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Argus.Core" Version="2021.6.26.1" />
    <PackageReference Include="AvalonEdit" Version="6.1.2.30" />
    <PackageReference Include="Dapper" Version="2.0.90" />
    <PackageReference Include="FluentWPF" Version="0.9.0" />
    <PackageReference Include="MahApps.Metro.IconPacks.MaterialDesign" Version="4.8.0" />
    <PackageReference Include="Microsoft.Data.Sqlite" Version="5.0.7" />
    <PackageReference Include="ModernWpfUI" Version="0.9.4" />
    <PackageReference Include="MahApps.Metro.IconPacks.VaadinIcons" Version="4.8.0" />
  </ItemGroup>

</Project>
